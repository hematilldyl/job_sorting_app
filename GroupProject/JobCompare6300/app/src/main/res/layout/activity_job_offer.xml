<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Enter New Job Offer"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- EditText fields for job offer details -->
    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Title"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCOL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost of Living"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yearly Salary"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextBonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yearly Bonus"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTuition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tuition Reimbursement"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editInsurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insurance"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editEmployeeDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee Discount"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editAdoptionAssistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adoption Assistance"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <!-- Header for Current Job status -->
    <TextView
        android:id="@+id/textViewCurrentJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set to Current Job?"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Radio buttons for current job status -->
    <RadioGroup
        android:id="@+id/radioGroupCurrentJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/radioButtonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <!-- Buttons for save and cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginStart="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
