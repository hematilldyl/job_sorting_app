<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff6750a4"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="4dp"
            android:text="Compare Job Offers"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Ranked Job Offers Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranked Job Offers"
        android:textStyle="italic"
        android:paddingLeft="16dp"
        android:paddingTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/jobOffersListScrollView"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:background="@color/white"
            android:padding="8dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="false">

            <LinearLayout
                android:id="@+id/jobOffersListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <!-- Comparison Section -->

    <!-- Buttons -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:showDividers="middle"
        android:stretchColumns="1,2">

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/job1Title"
                android:layout_width="match_parent"
                android:background="#D3D3D3"
                android:gravity="center"
                android:padding="4dp"
                android:text="Job 1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/job2Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D3D3D3"
                android:gravity="center"
                android:padding="4dp"
                android:text="Job 2"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Title"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/title1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/title2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Company"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/company1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/company2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Salary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/salary1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/salary2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Bonus"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bonus1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/bonus2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Tuition"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tuition1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/tuition2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Insurance"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/insurance1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/insurance2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Discount"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/discount1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/discount2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Adoption"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/adoption1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/adoption2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="25dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Score"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/score1"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />

            <TextView
                android:id="@+id/score2"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/compareButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#ff6750a4"
            android:text="Compare"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/mainMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#FF6347"
            android:text="Main Menu"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
